<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_screen"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="10dp"
                android:id="@+id/heading"
                android:gravity="center"
                android:textSize="22dp"
                android:text="Title"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_below="@id/heading"
                android:orientation="vertical"
                android:id="@+id/uploadscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/uploader"
                    android:src="@drawable/upload"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <VideoView
                    android:id="@+id/videoView"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="250dp"/>
                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/change"
                    android:text="X"
                    android:visibility="invisible"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:visibility="invisible"
                    android:clickable="true"
                    android:id="@+id/playButton"
                    android:src="@drawable/ic_play"
                    android:layout_centerInParent="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"/>

            </RelativeLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/uploadscreen"
                android:padding="10dp"
                android:id="@+id/status"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/status"
                android:padding="10dp"
                android:id="@+id/desc"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/desc"
                android:padding="10dp"
                android:id="@+id/message"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Howmany videos you want to split ?"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/message"
                android:id="@+id/note"
                android:gravity="center"
                android:textSize="14dp"
                android:text="(You can split upto 3 vidoes)"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/options"
                android:layout_below="@id/note"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/option_3"
                    android:layout_marginTop="5dp"
                    android:text="3 Videos"
                    android:tag="3"
                    android:background="@drawable/grey_button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                </Button>

                <Button
                    android:id="@+id/option_2"
                    android:layout_marginTop="5dp"
                    android:text="2 Videos"
                    android:tag="2"
                    android:background="@drawable/grey_button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                </Button>

                <Button
                    android:visibility="gone"
                    android:id="@+id/option_1"
                    android:layout_marginTop="5dp"
                    android:text="1 Video"
                    android:tag="1"
                    android:background="@drawable/grey_button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                </Button>

            </LinearLayout>


            <LinearLayout
                android:layout_below="@id/options"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/generate"
                    android:text="Generate Split"
                    android:background="@color/primary_dark"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:id="@+id/main_home_layout"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/main_home"
                android:src="@drawable/ic_home"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/text_home"
                android:text="Home"
                android:gravity="center"
                android:layout_below="@id/main_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/main_settings_layout"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/settings"
                android:src="@drawable/ic_settings"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/text_settings"
                android:text="Settings"
                android:gravity="center"
                android:layout_below="@id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/main_files_layout"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/files"
                android:src="@drawable/ic_files"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:text="Files"
                android:id="@+id/text_files"
                android:gravity="center"
                android:layout_below="@id/files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>